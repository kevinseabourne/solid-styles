{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": [
    "src/**/*",
    "animation/**/*",
    "utils/**/*",
    "lightning/**/*",
    "hooks/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "scripts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vitest.config.ts",
    "vitest.config.ssr.ts"
  ]
}
